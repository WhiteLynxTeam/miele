<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/img_avatar_candidates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/pt_sans_regular"
        android:text="Романова Мария Ивановна"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/employment_options"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/employment_options" />

    <View
        android:id="@+id/employment_options"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/turquoise"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        android:layout_marginStart="6.5dp"/>
    
    <TextView
        android:id="@+id/tv_employment_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Трудоустроен(а)"
        android:fontFamily="@font/pt_sans_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/employment_options"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/employment_options"
        app:layout_constraintBottom_toBottomOf="@id/employment_options"/>
    
    <ImageButton
        android:id="@+id/ib_more_inf"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_more_inf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>