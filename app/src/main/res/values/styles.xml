<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="weekday">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/pt_sans_regular</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_date</item>
    </style>

    <style name="day">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bordo</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="flow_values">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/black</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@drawable/bg_outline_flow</item>
    </style>
</resources>